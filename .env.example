# ListingAI Environment Configuration

# Application
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=change-me-to-a-random-secret-key
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://listingai:listingai_dev@localhost:5432/listingai
DATABASE_URL_SYNC=postgresql://listingai:listingai_dev@localhost:5432/listingai
POSTGRES_USER=listingai
POSTGRES_PASSWORD=listingai_dev
POSTGRES_DB=listingai

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# Anthropic (Claude API)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# JWT
JWT_SECRET_KEY=change-me-jwt-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (Fernet key for MLS credentials)
ENCRYPTION_KEY=generate-with-python-cryptography-fernet

# Stripe
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_PRICE_ID_STARTER=price_xxxxx
STRIPE_PRICE_ID_PROFESSIONAL=price_xxxxx
STRIPE_PRICE_ID_ENTERPRISE=price_xxxxx

# S3 / MinIO
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=listingai-media
S3_REGION=us-east-1

# MLS (RESO/Trestle) - per-tenant, stored encrypted in DB
# These are defaults for development
MLS_DEFAULT_BASE_URL=https://api-trestle.corelogic.com
MLS_SYNC_INTERVAL_MINUTES=30
