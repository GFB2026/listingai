# ListingAI Environment Configuration
# Copy to .env and fill in real values.
# In development mode, APP_SECRET_KEY and JWT_SECRET_KEY auto-generate if left blank.

# Application
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Sentry (optional in dev, required in prod)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://listingai:listingai_dev@localhost:5432/listingai
DATABASE_URL_SYNC=postgresql://listingai:listingai_dev@localhost:5432/listingai
POSTGRES_USER=listingai
POSTGRES_PASSWORD=listingai_dev
POSTGRES_DB=listingai

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# Anthropic (Claude API)
ANTHROPIC_API_KEY=

# JWT — leave blank in dev (auto-generated), set a strong random value in prod
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (Fernet key for MLS credentials)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_STARTER=
STRIPE_PRICE_ID_PROFESSIONAL=
STRIPE_PRICE_ID_ENTERPRISE=

# S3 / MinIO — leave blank in dev (defaults to minioadmin), set real creds in prod
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=listingai-media
S3_REGION=us-east-1

# MLS (RESO/Trestle) - per-tenant, stored encrypted in DB
MLS_DEFAULT_BASE_URL=https://api-trestle.corelogic.com
MLS_SYNC_INTERVAL_MINUTES=30

# Monitoring (production only)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
